{{>layouts/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#data}}
    <tr>
        <th>{{id}}</th>
        <td>제목 : {{title}}</td>
        <td>내용 : {{content}}</td>
    </tr>
    </tbody>
    {{/data}}

</table>
<hr>
<a href="/articles/{{data.id}}/edit" class="btn btn-primary">수정하기</a>
<a href="/articles/{{data.id}}/delete" class="btn btn-danger">삭제하기</a>
<a href="/articles/index" class="btn btn-link">목록으로 돌아가기</a>
<hr>
{{>comments/_comments}}

{{>layouts/footer}}
